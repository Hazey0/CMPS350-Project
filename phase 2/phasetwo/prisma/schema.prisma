// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Seller {
  id           String        @unique @default(cuid())
  username     String        @unique
  password     String
  phones       Phone[]
  transactions Transaction[]
  companyName  String
  bankAccount  String
}

model Customer {
  id           String        @unique @default(cuid())
  username     String        @unique
  password     String
  transactions Transaction[]
  surname      String
  money        Int
}

model Admin {
  id       String @unique @default(cuid())
  username String @unique
  password String
}

model Phone {
  id          String @unique @default(cuid())
  img         String
  brand       String
  name        String
  price       Int
  storage     Int
  seller      String
  sellerPhone Seller @relation(fields: [seller], references: [username] )
  sold Boolean @default(false)
  featured Boolean @default(false)
  quantity Int
}

model Transaction {
  id          String   @unique @default(cuid())
  buyer       String
  seller      String
  phone       String
  quantity    Int
  date        DateTime @default(now())
  total       Int
  buyerTrans  Customer @relation(fields: [buyer], references: [id])
  sellerTrans Seller   @relation(fields: [seller], references: [id])
}

model Stat {
  id                 String @unique @default(cuid())
  currentListedPhone Int
  soldPhones         Int
  numberOfSellers    Int
  numberOfCustomers  Int
  vistedToday Int @default(0)
  listedToday Int @default(0)
}
